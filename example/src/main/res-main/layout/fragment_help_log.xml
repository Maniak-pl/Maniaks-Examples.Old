<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:text="Log"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_default"
        android:layout_gravity="center"
        android:text="Możemy ułatwić sobie dodawanie logów przez przygotowanie odpowiedniej klasy i przez dodanie do Android Studio, Live Templates"
        />



    <ListView
        android:id="@+id/consoleLogLv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="-1dp">

        </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_default_small"
        android:orientation="horizontal">

        <Button
            android:id="@+id/logInfoBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textSize="@dimen/text_micro_size"
            android:textStyle="bold"
            android:text="Log.INFO"
            android:textColor="@color/green"/>

        <Button
            android:id="@+id/logDebugBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textSize="@dimen/text_micro_size"
            android:textStyle="bold"
            android:text="Log.DEBUG"
            android:textColor="@color/blue"/>

        <Button
            android:id="@+id/logWarningBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textSize="@dimen/text_micro_size"
            android:textStyle="bold"
            android:text="Log.WARN"
            android:textColor="@color/orange"/>

        <Button
            android:id="@+id/logErrorBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="Log.ERROR"
            android:textSize="@dimen/text_micro_size"
            android:textStyle="bold"
            android:textColor="@color/red"/>


        </LinearLayout>


</LinearLayout>