<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.SoldiersOfMobileFindLocationFragment">

    <FrameLayout
        android:id="@+id/findLocationMapContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/padding_default"></FrameLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/findLocationBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_location_button_find"/>

        <Button
            android:id="@+id/saveLocationBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_location_button_save"/>

        <Button
            android:id="@+id/removeLocationBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_location_button_remove"/>

    </LinearLayout>


</LinearLayout>
