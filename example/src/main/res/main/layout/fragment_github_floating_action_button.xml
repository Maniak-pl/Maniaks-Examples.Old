<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/FragmentHeader"
        android:text="@string/fragment_github_floating_action_button_header"
        />

    <RelativeLayout
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/floatingActionButtonInfoTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_default"
            android:background="@drawable/border_triangle"
            android:text="@string/floating_button_info_text"
            android:padding="@dimen/padding_default"/>

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/multiple_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            fab:fab_addButtonColorNormal="@color/white"
            fab:fab_addButtonColorPressed="@color/white"
            fab:fab_addButtonPlusIconColor="@color/gray"
            fab:fab_labelStyle="@style/FloatingButtonMenuLabels"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/white"
                fab:fab_title="@string/floating_button_label_next"
                fab:fab_icon="@drawable/ic_hand_next"
                fab:fab_colorPressed="@color/white"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/white"
                fab:fab_icon="@drawable/ic_hand_back"
                fab:fab_title="@string/floating_button_label_back"
                fab:fab_colorPressed="@color/white"/>

        </com.getbase.floatingactionbutton.FloatingActionsMenu>



    </RelativeLayout>


</LinearLayout>